<div class="row">
  <h4><%= @post.title %></h4>
  <%= image_tag @post.post_img.url(:medium), class: "post" %>
  <h3>Description</h3>
  <p><%= @post.description %></p>
</div>
<br/><hr/>

<% if user_signed_in? %>
  <% if @post.user_id == current_user.id %>
    <%= link_to 'Edit', edit_post_path, class: "btn btn-primary" %>
    <%= link_to 'Delete', post_path(@post), method: :delete, class: "btn btn-danger", data: { confirm: 'Are you sure?' } %>
  <% end %>
  <h1><%= @post.comment %></h1>
<% end %>


<div class="form-horizontal custom">
  <fieldset>
    <legend>Comment</legend>
      <div class="form-inputs">
      <%= simple_form_for @post, :html => { :multipart => true } do |f| %>
      <%= f.input :comment %>
      <%= f.button :submit, class: "form-actions" %>
      <% end %>
    </div>
  </fieldset>
</div>